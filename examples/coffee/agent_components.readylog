causes_val( Act, CompState, L, L = ToState ) :-
    component( C, CompState, _CsWm, _CsReal, _CsIv ),
    edge( C, _FromState, Act, ToState ).
causes_val( Act, CompState, L, L = ToState ) :-
    component( C, CompState, _CsWm, _CsReal, _CsIv ),
    finisher( A, Act ),
    edge( C, _FromState, A, ToState ).
    
